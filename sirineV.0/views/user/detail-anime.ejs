                      }
                      else if(bintang==3){
                        var btg_hitam=2
                      }
                      else if(bintang==4){
                        var btg_hitam=1
                      }
                      else{
                        var btg_hitam=0
                      }
                      for(var k=0;k<btg_hitam;k++){
                          %>
                      <span class="fa fa-star"></span>
                      <%}  
                      %>

                </div>
                <% if(user.review){%>
                  <p class="">
                    <%= user.review %>
